extends layout

block metas

block title
  title Development Error Stacktrace
  
block links

block headScripts

block bodyScripts

block content

  .main

    .container

      .row

        .col-lg-9.col-md-10.col-sm-11.col-xs-12.col-centered

          .panel-body
          

            if (message != undefined)

              if(type === 'success')
                .alert.alert-success(role="alert") #{message}

              if(type === 'warning')
                .alert.alert-warning(role="alert") #{message}

              if(type === 'danger')
                .alert.alert-danger(role="alert") #{message}


            - var appErrorName = `${notifyMessageErr.name}`
            - var appErrorMessage = `${notifyMessageErr.message}`
            - var appErrorStatus = `${notifyMessageErr.status}`
            - var appErrorCode = `${notifyMessageErr.code}`
            - var appErrorStack = `${notifyMessageErr.stack}`
            

            pre
              p Name: #{appErrorName}
              p Message: #{appErrorMessage}
              p Status: #{appErrorStatus}
              p Code: #{appErrorCode}
              p Xhr: #{notifyMessageReqXhr}
              p Referer: #{notifyMessageReferer}
              hr
              br
              p Stack: #{appErrorStack}
